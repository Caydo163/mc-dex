<UserControl x:Class="MC_Dex.itemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC_Dex"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="400" Foreground="{x:Null}">

    <Grid Background="#BA0E0D0D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="/img/Terre.webp" MaxHeight="50" MaxWidth="50" Margin="25,10"/>
        <TextBlock Grid.Column="1" Text="Terre" Foreground="White" VerticalAlignment="Center" FontSize="55"/>

    </Grid>

</UserControl>
