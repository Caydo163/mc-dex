<UserControl x:Class="MC_Dex.boutonAjoutUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC_Dex"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">

    <UserControl.Resources>
        <FontFamily x:Key="Minecraft">font\minecraft_font.ttf#Minecraft</FontFamily>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Width="50" Height="35" Grid.Column="0" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="img\ajouter.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

        <TextBlock x:Name="nomAjout" Text="Ajouter un craft" Grid.Column="1" Margin="5,0,20,0" Foreground="White" VerticalAlignment="Center" FontFamily="{StaticResource Minecraft}"/>
    </Grid>
</UserControl>
