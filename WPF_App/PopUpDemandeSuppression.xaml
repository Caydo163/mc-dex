<Window x:Class="MC_Dex.PopUpDemandeSuppression"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MC_Dex"
        mc:Ignorable="d"
        Title="PopUpDemandeSuppression" Height="230" Width="350"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True"
        BorderThickness="1" BorderBrush="White">



    <DockPanel>
        <DockPanel.Background>
            <ImageBrush ImageSource="img\background.png" Stretch="UniformToFill"/>
        </DockPanel.Background>


        <TextBlock DockPanel.Dock="Top" Text="Voulez-vous vraiment supprimer l'objet suivant" FontFamily="{StaticResource Minecraft}" FontSize="20" TextWrapping="Wrap" TextAlignment="Center" Margin="10" Foreground="White"/>

        <Border DockPanel.Dock="Bottom" VerticalAlignment="Top" Height="50" Style="{StaticResource pageAjouter_borderGrid}" x:Name="ButtonValider">
            <Button Click="Button_Confirmer">
                <TextBlock Text="CONFIRMER" Style="{StaticResource pageAjouter_textBlock}"/>
            </Button>
        </Border>

        <!--<local:ItemUC Nom="{Binding Nom}"  ImageName="{Binding Image}"/>-->

    </DockPanel>
</Window>
