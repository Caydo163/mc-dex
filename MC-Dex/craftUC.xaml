<UserControl x:Class="MC_Dex.craftUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC_Dex"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="#C3C3C3">
        <Grid Background="Gray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Image Grid.Column="0" Grid.Row="0" Source="img\bloc_terre.png"/>
            <Image Grid.Column="1" Grid.Row="0" Source="img\bloc_terre.png"/>
            <Image Grid.Column="2" Grid.Row="0" Source="img\bloc_terre.png"/>
            <Image Grid.Column="0" Grid.Row="1" Source="img\bloc_terre.png"/>
            <Image Grid.Column="1" Grid.Row="1" Source="img\bloc_terre.png"/>
            <Image Grid.Column="2" Grid.Row="1" Source="img\bloc_terre.png"/>
            <Image Grid.Column="0" Grid.Row="2" Source="img\bloc_terre.png"/>
            <Image Grid.Column="1" Grid.Row="2" Source="img\bloc_terre.png"/>
            <Image Grid.Column="2" Grid.Row="2" Source="img\bloc_terre.png"/>



        </Grid>
    </StackPanel>
</UserControl>
