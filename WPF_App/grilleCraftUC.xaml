<UserControl x:Class="MC_Dex.grilleCraftUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC_Dex"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="{x:Null}" BorderThickness="2" BorderBrush="#C5C5C5" CornerRadius="15" Margin="20,15,20,7" Padding="5,10">
        <StackPanel x:Name="stackPanelGrilleCraft">
            <StackPanel Width="auto"  Orientation="Horizontal" >
                <Grid Margin="10" VerticalAlignment="Center">
                    <Grid.Resources>
                        <SolidColorBrush x:Key="brush" Color="#C5C5C5"/>
                        <Style TargetType="Image">
                            <Setter Property="Width" Value="40"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Column="0" Grid.Row="0" BorderBrush="{StaticResource brush}" BorderThickness="0 0 2 2">
                        <Image x:Name="Image1"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="0" BorderBrush="{StaticResource brush}" BorderThickness="2 0 2 2">
                        <Image x:Name="Image2"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="0" BorderBrush="{StaticResource brush}" BorderThickness="2 0 0 2">
                        <Image x:Name="Image3" />
                    </Border>
                    <Border Grid.Column="0" Grid.Row="1" BorderBrush="{StaticResource brush}" BorderThickness="0 2 2 2">
                        <Image x:Name="Image4"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="1" BorderBrush="{StaticResource brush}" BorderThickness="2 2 2 2">
                        <Image x:Name="Image5"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="1" BorderBrush="{StaticResource brush}" BorderThickness="2 2 0 2">
                        <Image x:Name="Image6"/>
                    </Border>
                    <Border Grid.Column="0" Grid.Row="2" BorderBrush="{StaticResource brush}" BorderThickness="0 2 2 0">
                        <Image x:Name="Image7"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="2" BorderBrush="{StaticResource brush}" BorderThickness="2 2 2 0">
                        <Image x:Name="Image8"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="2" BorderBrush="{StaticResource brush}" BorderThickness="2 2 0 0">
                        <Image x:Name="Image9"/>
                    </Border>

                </Grid>

                <Image Source="img\flecheCraft.png" Width="60" Margin="10"/>
                <!--<DockPanel Margin="0,60,0,0">
                <Border DockPanel.Dock="Top" Width="70" Height="70">
                    <Image x:Name="Image10" Margin="5"/>
                </Border>
                    <TextBlock Text="3" Style="{StaticResource pageObjet_textePartie}"/>
                </DockPanel>-->

                <Canvas Width="80" Height="80" Margin="5">
                    <TextBlock x:Name="nbBlocCraft" Canvas.Right="-15" Panel.ZIndex="1" Canvas.Bottom="2"  Text="3" Style="{StaticResource pageObjet_textePartie}" FontSize="20"/>
                    <Image x:Name="Image10" Width="70" Height="70" Margin="5"/>
                    
                </Canvas>
            </StackPanel>

            <TextBlock Text="* 5 planches"  Style="{StaticResource pageObjet_textePartie}"/>
            <TextBlock Text="* 8 lingots d'or" Style="{StaticResource pageObjet_textePartie}"/>
        </StackPanel>
    </Border>
</UserControl>
