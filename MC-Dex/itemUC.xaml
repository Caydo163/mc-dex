<UserControl x:Class="MC_Dex.itemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC_Dex"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="220" Foreground="{x:Null}">

    <Border CornerRadius="12" BorderThickness="5" Background="#BA0E0D0D" Height="80" Width="220" Margin="3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="img\bloc_terre.png" Height="50" Width="50" Margin="20,1"/>
            <TextBlock Grid.Column="1" Text="Terre" FontFamily="Minecraft" Foreground="White" FontSize="25" VerticalAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
    </Border>

</UserControl>
